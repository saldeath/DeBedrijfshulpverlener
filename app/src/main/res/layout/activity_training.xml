<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nl.debhver.debedrijfshulpverlener.AdminTrainingActivity"
    android:weightSum="1">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:id="@+id/traininglistView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/trainingAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/traininglistView"
        android:layout_alignEnd="@+id/traininglistView" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/trainingUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_admin"
        android:tint="@android:color/background_light"
        android:layout_above="@+id/trainingAdd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

